<div>
    <h2 class="text-center"><strong>Edit your team!</strong></h2>
</div>

<form 
    class="row g-3 d-flex p-2"
    action="/edit/{{data.tla}}/" 
    method="POST" 
    enctype="multipart/form-data">   
    <div class="col-md-1">
        <label for="id" class="form-label">id</label>
        <input type="number" class="form-control" id="id" name="id" value="{{data.id}}""">
    </div>
    <div class="col-md-4">
        <label for="name" class="form-label">Club Name</label>
        <input type="text" class="form-control" id="name" name="name" value="{{data.name}}""" >
    </div>
    <div class="col-md-2">
        <label for="short-name" class="form-label">Short Name</label>
        <input type="text" class="form-control" id="short-name" name="shortName" value="{{data.shortName}}""" >
    </div>    
    <div class="col-md-2">
        <label for="abreviated-name" class="form-label">Acronym</label>
        <input type="text" class="form-control" id="tla" name="tla" value="{{data.tla}}""" >
    </div>     
    <div class="col-md-3">
        <label for="country" class="form-label">Country</label>
        <input type="text" class="form-control" id="country" name="countryName" value="{{data.area.name}}""" >
    </div>     
    <div class="col-md-3">
        <label for="address" class="form-label">Address</label>
        <input type="text" class="form-control" id="address" name="adress" value="{{data.address}}""" >
    </div>
    <div class="col-md-3">
        <label for="phone" class="form-label">Phone Number</label>
        <input type="text" class="form-control" id="phone" name="phone" value="{{data.phone}}""" >
    </div>    
    <div class="col-md-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" class="form-control" id="email" name="email" value="{{data.email}}""" >
    </div>     
    <div class="col-md-3">
        <label for="web-site" class="form-label">Web Site</label>
        <input type="text" class="form-control" id="web-site" name="webSite" value="{{data.website}}""" >
    </div> 
    <div class="col-md-3">
        <label for="stadium" class="form-label">Stadium</label>
        <input type="text" class="form-control" id="stadium" name="stadium" value="{{data.venue}}""" >
    </div> 
    <div class="col-md-3">
        <label for="club-colots" class="form-label">Club Colors</label>
        <input type="text" class="form-control" id="club-colors" name="colors" value="{{data.clubColors}}""" >
    </div> 
    <div class="col-md-1">
        <label for="founded" class="form-label">Year of foundation</label>
        <input type="text" class="form-control" id="founded" name="founded" value="{{data.founded}}""" >
    </div> 
   <div class="col-md-5">
      <label for="url-crest" class="form-label">URL Crest</label>
      <input type="text" class="form-control" id="url-crest" name="urlImage" value="{{data.crestUrl}}">
   </div>    
   <div class="col-md-8">
      <input type="file" class="form-control" id="crest-image" name="image" aria-describedby="inputGroupFileAddon04"
        aria-label="Upload">
    </div>
    <div class="col-3">
      <img class="rounded mx-auto d-block" src="{{data.crestUrl}}" alt="crest-{{data.name}} ">
    </div> 
    {{#if data.crestLocal}}
    <div class="col-6">
      <p>Local Image</p>
      <img class="rounded mx-auto d-block" src="{{data.crestLocal}}" name="image" alt="crest {{data.name}} local">
    </div>
    {{/if}}   
    <div class="col-2">
      <button type="submit" class="btn btn-primary align-self-end" id="button-save">Save</button>
   </div>
   <div class="col-2">
      <a href="/" class="btn btn-primary justify-content-end" id="button-back"
        value="retroceder">Back</a>
   </div>

</form>
    
</div>

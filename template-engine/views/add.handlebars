<h2 class="text-center"><strong>Add your new club!!!</strong></h2>
<form class="row g-3 d-flex p-2"
   action="/add" 
   method="POST" 
   enctype="multipart/form-data">
   <div class="col-md-1">
      <label for="id" class="form-label">id</label>
      <input type="number" class="form-control" id="id" name="id" placeholder="Club id" required>
   </div>
   <div class="col-md-4">
      <label for="name" class="form-label">Club Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Name" value='{{club.name}}'required>
   </div>
   <div class="col-md-2">
      <label for="short-name" class="form-label">Short Name</label>
      <input type="text" class="form-control" id="short-name" name="shortName" placeholder="Short Name" required>
   </div>
   <div class="col-md-2">
      <label for="abreviated-name" class="form-label">Acronym</label>
      <input type="text" class="form-control" id="tla" name="tla" placeholder="Acronym" required>
   </div>
   <div class="col-md-3">
      <label for="country" class="form-label">Country</label>
      <input type="text" class="form-control" id="country" name="countryName" placeholder="Country" required>
   </div>
   <div class="col-md-3">
      <label for="address" class="form-label">Address</label>
      <input type="text" class="form-control" id="address" name="adress" placeholder="Address" required>
   </div>
   <div class="col-md-3">
      <label for="phone" class="form-label">Phone Number</label>
      <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone Number" required>
   </div>
   <div class="col-md-3">
      <label for="email" class="form-label">Email</label>
      <input type="text" class="form-control" id="email" name="email" placeholder="Email" required>
   </div>
   <div class="col-md-3">
      <label for="web-site" class="form-label">Web Site</label>
      <input type="text" class="form-control" id="web-site" name="webSite" placeholder="Web Site" required>
   </div>
   <div class="col-md-3">
      <label for="stadium" class="form-label">Stadium</label>
      <input type="text" class="form-control" id="stadium" name="stadium" placeholder="Stadium" required>
   </div>
   <div class="col-md-3">
      <label for="club-colots" class="form-label">Club Colors</label>
      <input type="text" class="form-control" id="club-colors" name="colors" placeholder="Club Colors" required>
   </div>
   <div class="col-md-1">
      <label for="founded" class="form-label">Year of foundation</label>
      <input type="number" class="form-control" id="founded" name="founded" placeholder="Year" required>
   </div>
   <div class="col-md-5">
      <label for="url-crest" class="form-label">URL Crest</label>
      <input type="text" class="form-control" id="url-crest" name="urlImage" placeholder="https://upload.wikimedia.org/wikipedia/en/5/53/xxxxx.svg">
   </div>
   <div class="col-md-8">
      <input type="file" class="form-control" id="crest-image" name="image" aria-describedby="inputGroupFileAddon04"
        aria-label="Upload">
    </div>
   <div class="col-2">
      <button type="submit" class="btn btn-primary " id="button-save">Save</button>
   </div>
   <div class="col-2">
      <a href="/" class="btn btn-primary" id="button-back"
        value="backS">Back</a>
   </div>

   
</form>

